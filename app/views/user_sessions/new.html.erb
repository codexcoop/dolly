<% @user_session.errors.clear %>
<% form_for @user_session do |f| %>
  <h2><%= f.label :login %></h2>
  <div class="field"><%= f.text_field :login %></div>
  <h2><%= f.label :password %></h2>
  <div class="field"><%= f.password_field :password %></div>
  <p style="margin: 0 0 1.5em 0"><%= f.submit "&nbsp;Collegati&nbsp;", :class => "submit" %></p>
  <div><%= mail_to "dolly@codexcoop.it", t('.retrieve_password'), :encode => "hex", :subject => "[Dolly]" %></div>
<% end -%>

