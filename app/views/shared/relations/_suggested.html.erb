<p class="add-suggested-invite"><%= t('.add_invite') %></p>
<% content_tag :table,  :id => "suggested-#{opts[:related_to]}", # => "suggested-creators"
                        :class => 'interactive-list suggested-list',
                        :'data-excluded-ids' => opts[:excluded_ids].to_json do %>
  <% opts[:suggested_list].each do |suggested_record| %>
    <% content_tag  :tr,
                    :class => 'choice-item suggested-item',
                    :'data-related-id' => suggested_record.id.to_json do %>
      <td class="bullet-icon-wrap">
        <span class="ui-icon ui-icon-radio-on bullet-icon">&nbsp;</span>
      </td>
      <td>
        <em><%= opts[:suggested_label].call(suggested_record) %></em>
      </td>
      <% content_tag :td, :class => 'choice-item-label' do %>
        <% content_tag  :span,
                        :class => 'item-action-add-suggested',
                        :'data-selected-id' => suggested_record.id.to_json,
                        :'data-selected-value' => opts[:suggested_label].call(suggested_record) do %>
          <%= t('.add_item') %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

